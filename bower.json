{
  "name": "pixel",
  "main": "pixel.min.js",

  "opc-scripts": {
    "build": [
      "browserify ./src",
      "--transform coffeeify",
      "--standalone pixel",
      "--extension .coffee",
      "--debug"
    ],
    "uglify": [
      "uglifyjs",

      "pixel.js",
      "--in-source-map",
      "pixel.js.map",

      "--mangle",
      "--compress",

      "--output",
      "pixel.min.js",
      "--source-map",
      "pixel.min.js.map"
     ]
  },

  "ignore": [
    "**/.*",
    "node_modules",
    "bower_components",
    "*.coffee",
    "src",
    "test"
  ],

  "authors": [
    "59naga <i59naga@icloud.com>"
  ],
  "homepage": "https://github.com/59naga/pixel",

  "license": "MIT",
}
