{
  "name": "pixel",
  "version": "0.0.1-alpha.2",
  "description": "Parse file to ImageData in cross-platform",

  "files": [
    "index.js",
    "lib"
  ],
  "browser": {
    "./src": false
  },

  "scripts": {
    "start": "jasminetea --file index.coffee --lint --watch",
    "localhost": "zuul test --ui jasmine2 --local 59798 --open",
    "build-dev": "$(opc bower opc-scripts.build) > $(opc bower name).js",

    "test": "jasminetea --file index.coffee --cover --report --lint",
    "test-cloud": "zuul test",

    "prepublish": "node -e \"if(process.env.TRAVIS){}else{process.exit(1)}\" && npm run compile || echo skip prepublish",
    "compile": "coffee --bare --compile index.coffee",
    "postcompile": "coffee --output lib --bare --compile src",

    "prebuild": "$(opc bower opc-scripts.build) | exorcist $(opc bower name).js.map > $(opc bower name).js",
    "build": "$(opc bower opc-scripts.uglify)",
    "postbuild": "rm $(opc bower name).js $(opc bower name).js.map && wc -c $(opc bower main)",
    "update": "git tag v$(opc package version) && git push --tags"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm test"
    }
  },

  "dependencies": {
    "pixel-bmp": "^0.0.0-alpha.3",
    "pixel-gif": "^0.0.0-alpha.1",
    "pixel-jpg": "^0.0.0-alpha.3",
    "pixel-png": "^0.0.0-alpha.2",
    "pixel-util": "^0.0.0-beta.3"
  },
  "devDependencies": {
    "brfs": "^1.4.0",
    "browserify": "^10.2.1",
    "coffeeify": "^1.1.0",
    "exorcist": "^0.4.0",
    "fixture-images": "^0.1.5",
    "ghooks": "^0.3.2",
    "jasminetea": "^0.2.1-alpha.2",
    "object-parser-cli": "0.0.0",
    "uglify-js": "^2.4.23",
    "varify": "^0.1.1",
    "zuul": "^3.0.0"
  },
  
  "keywords": [
    "pixel",
    "png",
    "jpg",
    "gif",
    "bmp"
  ],
  "author": "59naga <i59naga@icloud.com> (http://berabou.me)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/59naga/pixel.git"
  },
  "bugs": {
    "url": "https://github.com/59naga/pixel/issues"
  },
  "homepage": "https://github.com/59naga/pixel#readme"
}
